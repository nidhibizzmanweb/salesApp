<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp"
        android:background="@color/purple_200">

        <TextView
            style="@style/tvBold"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:text="@string/mr_reporting"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/refresh_icon"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_refresh_icon" />

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_carbon_notification" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:paddingVertical="@dimen/_15sdp"
                android:paddingHorizontal="@dimen/_12sdp">

                <TextView
                    android:id="@+id/tvHeading"
                    style="@style/tvBold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/welcome_ansarul_sales_executive"/>

                <TextView
                    android:id="@+id/tvCal"
                    style="@style/tvSemiBold"
                    android:layout_below="@+id/tvHeading"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_bx_calendar"
                    android:drawablePadding="@dimen/_8sdp"
                    android:text="Todayâ€™s Schedule Plan: 24 Jan 2021"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tvLocation"
                    style="@style/tvSemiBold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:layout_below="@+id/tvCal"
                    android:text="Area: GANGAPURE CITY, MAHU, PATEL NAGAR, MAHWA" />

                <TextView
                    android:id="@+id/tvGps"
                    style="@style/tvSemiBold"
                    android:layout_below="@+id/tvLocation"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:drawableStart="@drawable/ic_bxs_map"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/gps"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvGpsSing"
                    style="@style/tvSemiBold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:layout_below="@+id/tvLocation"
                    android:text="GPS Sing"
                    android:paddingVertical="@dimen/_4sdp"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:background="@drawable/blue_rectangle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_8sdp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_height="@dimen/_100sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_6sdp">

                        <LinearLayout
                            android:id="@+id/dashboardSec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/purple_500"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bxs_dashboard"/>

                            <TextView
                                style="@style/tvSemiBold"
                                android:text="Dashboard"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="@dimen/_100sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_6sdp">

                        <LinearLayout
                            android:id="@+id/myPlanSec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/purple_500"
                            android:paddingVertical="@dimen/_18sdp"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_my_plan"/>

                            <TextView
                                style="@style/tvSemiBold"
                                android:text="My Plan"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_6sdp">

                        <LinearLayout
                            android:id="@+id/targetAchievmnetSec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@color/purple_500"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_9sdp">

                            <ImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bx_target_lock" />

                            <TextView
                                style="@style/tvSemiBold"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="@string/target_amp_achievement"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_6sdp">

                        <LinearLayout
                            android:id="@+id/expenseSec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/purple_500"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:paddingVertical="@dimen/_18sdp">

                            <ImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_mdi_upload" />

                            <TextView
                                style="@style/tvSemiBold"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Expense"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_140sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="@dimen/_100sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_6sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/purple_500"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_fluent_arrow_sync_circle_16_filled"/>

                            <TextView
                                style="@style/tvSemiBold"
                                android:text="Sync"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_11sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>