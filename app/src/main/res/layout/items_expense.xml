<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:padding="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_12sdp"
    android:background="@drawable/grey_stroke_color">

    <ImageView
        android:id="@+id/imgPerson"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_person"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/tvBold"
        android:text="Dr. ABHISHEK (MBBS)"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_toEndOf="@+id/imgPerson"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imgMap"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        app:tint="@color/purple_200"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/imgPerson"
        android:src="@drawable/ic_bxs_map"/>

    <TextView
        android:id="@+id/tvLocation"
        style="@style/tvSemiBold"
        android:layout_below="@+id/imgPerson"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_toEndOf="@+id/imgMap"
        android:text="GANGAPUR CITY - hswh g"
        android:textColor="@color/heading_color"
        android:textSize="@dimen/_11sdp" />

    <TextView
        style="@style/tvSemiBold"
        android:layout_marginStart="@dimen/_6sdp"
        android:text="Ticket no. MR0001"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/imgMap"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp" />

    <TextView
        android:id="@+id/tvOpen"
        style="@style/tvRegular"
        android:text="Open"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_9sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:layout_below="@+id/imgMap"
        android:layout_marginTop="@dimen/_8sdp"
        android:backgroundTint="@color/purple_200"
        android:background="@drawable/grey_stroke_color"
        android:textColor="@color/white"/>





</RelativeLayout>